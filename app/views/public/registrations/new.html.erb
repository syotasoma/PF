<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <table>
    <tbody>
      <tr>
        <th>姓</th>
        <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
        <th>名</th>
        <td><%= f.text_field :first_name, autocomplete: "first_name" %></td>
      </tr>
      <tr>  
        <th>姓カナ</th>
        <td><%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %></td>
      </tr>
      <tr>
        <th>名カナ</th>
        <td><%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.email_field :email, autocomplete: "email" %></td>
      </tr>
      <tr>
        <th>パスワード</th>
        <td><% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <th>パスワード確認用</th>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td><%= f.submit "新規登録" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

