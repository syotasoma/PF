<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
<div class=container>
  <div class="row d-flex justify-content-center">
   <div class="field col-lg-4">
    <%= f.label :last_name,  "姓" %>
    <%= f.text_field:last_name,autofoucus: true %>
   </div>
  </div>
  
  <div class="row d-flex justify-content-center">
   <div class="field col-lg-4">
    <%= f.label :first_name,  "名" %>
    <%= f.text_field:first_name %>
   </div>
  </div>
  
  <div class="row d-flex justify-content-center">
   <div class="field col-lg-4">
    <%= f.label :last_name_kana,   "セイ" %>
    <%= f.text_field:last_name_kana  %>
   </div>
  </div>
  
  <div class="row d-flex justify-content-center">
   <div class="field col-lg-4">
    <%= f.label :first_name_kana,  "メイ" %>
    <%= f.text_field:first_name_kana %>
   </div>
  </div>
  
  <div class="row d-flex justify-content-center">
   <div class="field col-lg-4">
    <%= f.label :email,  "メールアドレス" %>
    <%= f.text_field:email %>
   </div>
  </div>
  
  <div class="row d-flex justify-content-center">
    <div class="field col-lg-4">
      <%= f.label :password,"パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>
<div class="row d-flex justify-content-center">
  <div class="field col-lg-4">
    <%= f.label :password_confirmation, "パスワード（確認用)"%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
</div>
<div class="row d-flex justify-content-center">
  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
</div>
<% end %>


