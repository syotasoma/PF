<h1>指定したジャンルの一覧</h1>
<div class="container">
 <% @genre.menus.each do |menu| %>
  <div class="row d-flex justify-content-center mt-5">

    <div class="col-lg-3">
      <h4>メニュー名</h4>
      <%= menu.menu_name %>
      </div>
      
      <div class="col-lg-3">
      <h4>ジャンル</h4>
        <%= @genre.genre_name %>
      </div>
      
      <div class="col-lg-3">
      <h4>難易度</h4>
      <div>
        <div id="difficulty_raty_<%= menu.id %>"></div>
         <script>
          $(document).on('turbolinks:load', function() {
            let elem = document.querySelector('#difficulty_raty_<%= menu.id %>');
            if (elem == null) return;

            elem.innerHTML = ""
            let opt = {  
              starOn: "<%= asset_path('star-on.png') %>",
              starOff: "<%= asset_path('star-off.png') %>",
              score: <%= menu.difficulty %>,
              readOnly: true
            };
              raty(elem, opt);
            });
        </script>          
        <div><%= link_to "詳細を見る", menu_path(menu.id), class: "btn btn-info" %></div>
       </div>
      </div>
     </div>


<% end %>
</div>
