<h1>メニュー編集</h1>
<%= form_with model: @menu, url: edit_menu_path do |f| %>
<div class="cotainer">
  <div class="row">
    <h4>イメージ図</h4>
    <%= f.file_field :menu_image, accept: "iamge/*" %>
  </div>
  <div class="row">
    <h4>メニュー名</h4>
    <%= f.text_field  :menu_name, autofocus: true %>
  </div>
  <div class="row">
    <h4>ジャンル</h4>
    <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, include_blank: "--選択してください--" %>
    <%= f.hidden_field :genre_id, :value => @menu.genre.id %>
  </div>
</div>
<%= f.submit "編集内容を保存する" %>
<% end %>
<%= link_to "削除する", menu_path, method: :delete, "data-confirm" => "削除しますか？" %> 