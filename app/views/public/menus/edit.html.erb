<h1>メニュー編集</h1>
<%= form_with model: @menu, url: menu_path do |f| %>
<div class="cotainer">
  <div class="row d-flex justify-content-center mt-5">
    <div class="col-lg-4">
      <h4>イメージ図</h4>
      <%= f.file_field :menu_image, accept: "iamge/*" %>
    </div>
  </div>
  <div class="row d-flex justify-content-center mt-5">
    <div class="col-lg-4">
     <h4>メニュー名</h4>
     <%= f.text_field  :menu_name, autofocus: true %>
    </div>
  </div>
  <div class="row d-flex justify-content-center mt-5">
    <div class="col-lg-4">
      <h4>ジャンル</h4>
      <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, include_blank: "--選択してください--" %>
      <%= f.hidden_field :genre_id, :value => @menu.genre.id %>
    </div>
  </div>
  <div class="row d-flex justify-content-center mt-5">
    <div class="col-lg-4">
      <%= f.submit "編集内容を保存する", class: "btn btn-success" %>
    </div>
  </div>
  <div class="row d-flex justify-content-center mt-5">
    <div class="col-lg-4">
      <%= link_to "削除する", menu_path, method: :delete, "data-confirm" => "削除しますか？", class: "btn btn-danger" %> 
    </div>
  </div>
</div>

<% end %>
