<h1>会員情報編集画面</h1>
<%= form_with model: @customer, url: customers_mypage_path, method: :patch do |f| %>
<div class="container">
  <div class="row">
    <h4>姓</h4>
    <%= f.text_field :last_name, sutofocus: true %>
  </div>
  <div class="row">
    <h4>名</h4>
    <%= f.text_field :first_name %>
  </div>
  <div class="row">
    <h4>セイ</h4>
    <%= f.text_field :last_name_kana %>
  </div>
  <div class="row">
    <h4>メイ</h4>
    <%= f.text_field :first_name_kana %>
  </div>
  <div class="row">
    <h4>メールアドレス</h4>
    <%= f.text_field :email %>
  </div>
<%= f.submit "編集内容を保存する" %>
<%= link_to "退会する", withdrawal_path, method: :patch, data: { confirm: "[確認]退会してもよろしいですか？"} %>
<% end %>