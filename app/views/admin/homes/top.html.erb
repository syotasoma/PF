<h1>管理者TOP</h1>
<% @customers.each do |customer| %>
  <div class="container">
    <div class="row mb-3">
     <div class="col">
       <h6>氏名</h6>
       <%= customer.last_name + customer.first_name %>
     </div>
     <div class="col">
       <h6>メールアドレス</h6>
       <%= customer.email %>
     </div>
     <div class="col">
       <h6>ステータス</h6>
       <% if customer.is_deleted %>
       <div style="color:red">退会済み</div>
       <% else %>
       <div style="color:blue">有効</div>
       <% end %>
     </div>
     
    </div>
  </div>
<% end %>


