<h1>会員一覧</h1>
<% @customers.each do |customer| %>
  <div class="container">
    <div class="row">
     <div class="col mb-5">
       <h6>氏名</h6>
       <%= customer.last_name + customer.first_name %>
     </div>
     <div class="col mb-5">
       <h6>メールアドレス</h6>
       <%= customer.email %>
     </div>
     <div class="col mb-5">
       <h6>ステータス</h6>
       <% if customer.is_deleted %>
       <div style="color:red">退会済み</div>
       <% else %>
       <div style="color:blue">有効</div>
       <% end %>
     </div>
     <div class="col-lg-3">
     <%= link_to "詳細",  edit_admin_customer_path(customer.id), class: "btn btn-info" %>
     </div>
     
    </div>
     
  </div>
  
  
<% end %>
<%= paginate @customers %>